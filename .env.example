# ============================================================================
# Leet99 Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in the values.
# Never commit .env.local or any file containing real secrets.
# ============================================================================

# ============================================================================
# PUBLIC (safe for browser, NEXT_PUBLIC_* prefix)
# ============================================================================

# Supabase (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# PartyKit (public - browser WS)
NEXT_PUBLIC_PARTYKIT_HOST=http://localhost:1999
NEXT_PUBLIC_PARTYKIT_PROJECT=leet99

# ============================================================================
# SERVER-ONLY (Next.js API routes + PartyKit)
# ============================================================================

# Supabase (server - only needed for privileged writes)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Judge0 (RapidAPI)
JUDGE0_URL=https://judge0-ce.p.rapidapi.com
JUDGE0_API_KEY=your-rapidapi-key
JUDGE0_RAPIDAPI_HOST=judge0-ce.p.rapidapi.com

# PartyKit
PARTYKIT_HOST=http://localhost:1999
PARTYKIT_PROJECT=leet99
PARTYKIT_PARTY=leet99

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Set to 'true' to use Pyodide for SUBMIT_CODE (demo mode, cheatable)
# Default: false (use Judge0 for authoritative results)
DEMO_MODE=false

# Enable debug shortcuts + debug WS actions (dev only; ignored in production)
ENABLE_DEV_TOOLS=false
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false
